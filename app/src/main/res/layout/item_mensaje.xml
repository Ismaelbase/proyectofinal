<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@drawable/borde_item_mensaje"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/mensaje_texto_propio"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:gravity="right|center_horizontal"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/mensaje_avatar_propio"
        app:layout_constraintEnd_toStartOf="@+id/mensaje_avatar_propio"
        app:layout_constraintTop_toTopOf="@+id/mensaje_avatar_propio"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/mensaje_fecha_propio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="monospace"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/mensaje_texto_propio"
        app:layout_constraintTop_toBottomOf="@+id/mensaje_texto_propio" />

    <ImageView
        android:id="@+id/mensaje_avatar_propio"
        android:layout_width="62dp"
        android:layout_height="65dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_avatar" />

    <ImageView
        android:id="@+id/mensaje_avatar_otro"
        android:layout_width="62dp"
        android:layout_height="65dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_avatar" />

    <TextView
        android:id="@+id/mensaje_texto_otro"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:gravity="center_horizontal|left"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/mensaje_avatar_otro"
        app:layout_constraintStart_toEndOf="@+id/mensaje_avatar_otro"
        app:layout_constraintTop_toTopOf="@+id/mensaje_avatar_otro"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/mensaje_fecha_otro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="monospace"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/mensaje_texto_otro"
        app:layout_constraintTop_toBottomOf="@+id/mensaje_texto_otro" />

    <ImageView
        android:id="@+id/icono_admin_propio"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/mensaje_avatar_propio"
        app:layout_constraintStart_toStartOf="@+id/mensaje_avatar_propio"
        app:srcCompat="@drawable/admin_icono_chat" />

</androidx.constraintlayout.widget.ConstraintLayout>