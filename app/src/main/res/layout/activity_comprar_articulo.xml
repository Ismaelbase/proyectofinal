<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comprar_articulo">

    <TextView
        android:id="@+id/comprar_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Categoria"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/comprar_stock"
        app:layout_constraintStart_toStartOf="@+id/comprar_stock"
        app:layout_constraintTop_toBottomOf="@+id/comprar_stock" />

    <ImageView
        android:id="@+id/comprar_imagen"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/generico" />

    <TextView
        android:id="@+id/editar_articulo_descripcion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_slab"
        android:gravity="center|top"
        android:inputType="textEmailAddress|textMultiLine"
        android:lines="20"
        android:minLines="2"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:text="Prueba"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/comprar_imagen"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/comprar_imagen"
        app:layout_constraintTop_toBottomOf="@+id/comprar_precio"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/comprar_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Nombre"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/comprar_imagen"
        app:layout_constraintStart_toStartOf="@+id/comprar_imagen"
        app:layout_constraintTop_toBottomOf="@+id/comprar_imagen" />

    <TextView
        android:id="@+id/comprar_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Precio â‚¬"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/comprar_nombre"
        app:layout_constraintStart_toStartOf="@+id/comprar_nombre"
        app:layout_constraintTop_toBottomOf="@+id/comprar_nombre" />

    <TextView
        android:id="@+id/comprar_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Stock"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/editar_articulo_descripcion"
        app:layout_constraintStart_toStartOf="@+id/editar_articulo_descripcion"
        app:layout_constraintTop_toBottomOf="@+id/editar_articulo_descripcion" />

    <Button
        android:id="@+id/comprar_reserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/viga"
        android:text="Reservar"
        app:layout_constraintEnd_toEndOf="@+id/editar_articulo_descripcion"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/editar_articulo_descripcion"
        app:layout_constraintTop_toBottomOf="@+id/comprar_categoria" />

    <ImageView
        android:id="@+id/comprar_volver"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comprar_reserva"
        app:srcCompat="@drawable/volver_sc" />
</androidx.constraintlayout.widget.ConstraintLayout>