<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_editar_inscripcion">

    <TextView
        android:id="@+id/admin_editar_inscripcion_evento_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Andres Bezoya"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/admin_editar_inscripcion_evento_imagen"
        app:layout_constraintStart_toStartOf="@+id/admin_editar_inscripcion_evento_imagen"
        app:layout_constraintTop_toBottomOf="@+id/admin_editar_inscripcion_evento_imagen" />

    <ImageView
        android:id="@+id/admin_editar_inscripcion_evento_imagen"
        android:layout_width="108dp"
        android:layout_height="87dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/admin_editar_inscripcion_usuario_imagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/admin_editar_inscripcion_usuario_imagen"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/admin_editar_inscripcion_usuario_imagen"
        android:layout_width="108dp"
        android:layout_height="87dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/admin_editar_inscripcion_usuario_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Andres Bezoya"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/admin_editar_inscripcion_usuario_imagen"
        app:layout_constraintStart_toStartOf="@+id/admin_editar_inscripcion_usuario_imagen"
        app:layout_constraintTop_toBottomOf="@+id/admin_editar_inscripcion_usuario_imagen" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/admin_editar_inscripcion_usuario_nombre"
        app:layout_constraintEnd_toStartOf="@+id/admin_editar_inscripcion_evento_imagen"
        app:layout_constraintStart_toEndOf="@+id/admin_editar_inscripcion_usuario_imagen"
        app:layout_constraintTop_toTopOf="@+id/admin_editar_inscripcion_usuario_imagen"
        app:srcCompat="@drawable/flecha_derecha_verde" />

    <Button
        android:id="@+id/admin_editar_inscripcion_aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:text="Aceptar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_editar_inscripcion_usuario_nombre" />

    <Button
        android:id="@+id/admin_editar_inscripcion_rechazar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:text="Rechazar"
        app:layout_constraintBottom_toBottomOf="@+id/admin_editar_inscripcion_aceptar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/admin_editar_inscripcion_aceptar" />

    <ImageView
        android:id="@+id/admin_editar_inscripcion_boton_volver"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/volver_sc" />

    <ImageView
        android:id="@+id/admin_editar_inscripcion_estado_color"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@+id/admin_editar_inscripcion_evento_nombre"
        app:layout_constraintStart_toEndOf="@+id/admin_editar_inscripcion_usuario_nombre"
        app:layout_constraintTop_toBottomOf="@+id/admin_editar_inscripcion_usuario_nombre"
        app:srcCompat="@drawable/pendiente" />

    <TextView
        android:id="@+id/admin_editar_inscripcion_estado_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pendiente"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/admin_editar_inscripcion_estado_color"
        app:layout_constraintEnd_toEndOf="@+id/admin_editar_inscripcion_estado_color"
        app:layout_constraintStart_toStartOf="@+id/admin_editar_inscripcion_estado_color"
        app:layout_constraintTop_toTopOf="@+id/admin_editar_inscripcion_estado_color" />
</androidx.constraintlayout.widget.ConstraintLayout>