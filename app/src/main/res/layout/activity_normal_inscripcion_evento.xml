<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Normal_inscripcion_evento">

    <TextView
        android:id="@+id/inscripcion_libres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_slab"
        android:text="30"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/inscripcion_fecha"
        app:layout_constraintTop_toBottomOf="@+id/inscripcion_fecha" />

    <TextView
        android:id="@+id/inscripcion_label_libres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Plazas libres"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/tv2"
        app:layout_constraintTop_toBottomOf="@+id/tv2" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Fecha"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <TextView
        android:id="@+id/inscripcion_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Precio"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/inscripcion_imagen"
        app:layout_constraintTop_toBottomOf="@+id/inscripcion_nombre" />

    <TextView
        android:id="@+id/inscripcion_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_slab"
        android:text="03/09/2021"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/inscripcion_precio"
        app:layout_constraintTop_toBottomOf="@+id/inscripcion_precio" />

    <ImageView
        android:id="@+id/inscripcion_imagen"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/evento_generico2" />

    <TextView
        android:id="@+id/inscripcion_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Nombre evento"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/inscripcion_imagen"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/inscripcion_imagen"
        app:layout_constraintTop_toBottomOf="@+id/inscripcion_imagen" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Precio"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/inscripcion_imagen"
        app:layout_constraintTop_toBottomOf="@+id/inscripcion_nombre" />

    <Button
        android:id="@+id/inscripcion_boton_inscribirse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/viga"
        android:text="Inscribirse"
        app:layout_constraintEnd_toEndOf="@+id/inscripcion_imagen"
        app:layout_constraintStart_toStartOf="@+id/inscripcion_imagen"
        app:layout_constraintTop_toBottomOf="@+id/inscripcion_label_libres" />

    <ImageView
        android:id="@+id/inscripcion_boton_volver"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inscripcion_boton_inscribirse"
        app:srcCompat="@drawable/volver_sc" />
</androidx.constraintlayout.widget.ConstraintLayout>