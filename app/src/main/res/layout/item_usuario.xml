<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_usuario_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/borde_recycler1"
    android:paddingTop="5dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/item_usuario_fondo_color"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_usuario_nombre"
        app:layout_constraintEnd_toEndOf="@+id/item_usuario_nombre"
        app:layout_constraintStart_toStartOf="@+id/item_usuario_nombre"
        app:layout_constraintTop_toTopOf="@+id/item_usuario_nombre"
        app:srcCompat="@drawable/usuario_normal" />

    <ImageView
        android:id="@+id/item_usuario_imagen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_avatar" />

    <TextView
        android:id="@+id/item_usuario_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:text="Paco"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/item_usuario_imagen"
        app:layout_constraintStart_toStartOf="@+id/item_usuario_imagen"
        app:layout_constraintTop_toBottomOf="@+id/item_usuario_imagen" />

    <ImageView
        android:id="@+id/item_usuario_alta"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/item_usuario_imagen"
        app:layout_constraintStart_toStartOf="@+id/item_usuario_imagen"
        app:layout_constraintTop_toBottomOf="@+id/item_usuario_fondo_color"
        app:srcCompat="@drawable/banear_usuario" />

</androidx.constraintlayout.widget.ConstraintLayout>