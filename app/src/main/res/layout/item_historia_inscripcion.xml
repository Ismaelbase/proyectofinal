<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/historia_inscripciones_todo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/borde_recycler1"
    android:padding="7dp"
    android:paddingTop="5dp">


    <TextView
        android:id="@+id/historia_inscripciones_evento_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="12/07/1992"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/historia_inscripciones_evento_nombre"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="@+id/historia_inscripciones_evento_nombre"
        app:layout_constraintTop_toBottomOf="@+id/historia_inscripciones_estado_color" />

    <ImageView
        android:id="@+id/historia_inscripciones_evento_imagen"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/historia_inscripciones_evento_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:text="Nombre evento"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/historia_inscripciones_estado_color"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/historia_inscripciones_estado_color"
        android:layout_width="95dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/historia_inscripciones_evento_imagen"
        app:layout_constraintEnd_toEndOf="@+id/historia_inscripciones_evento_nombre"
        app:layout_constraintStart_toStartOf="@+id/historia_inscripciones_evento_nombre"
        app:layout_constraintTop_toTopOf="@+id/historia_inscripciones_evento_imagen"
        app:srcCompat="@drawable/rechazar" />

    <TextView
        android:id="@+id/historia_inscripciones_estado_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pendiente"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/historia_inscripciones_estado_color"
        app:layout_constraintEnd_toEndOf="@+id/historia_inscripciones_estado_color"
        app:layout_constraintStart_toStartOf="@+id/historia_inscripciones_estado_color"
        app:layout_constraintTop_toTopOf="@+id/historia_inscripciones_estado_color" />
</androidx.constraintlayout.widget.ConstraintLayout>