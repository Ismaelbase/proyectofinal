<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tiendav12" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/principal_verde</item>
        <item name="colorPrimaryVariant">@color/principal_verde</item>
        <item name="colorOnPrimary">@color/principal_morado</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Tiendav12.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Tiendav12.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Tiendav12.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/borde_recycler1</item>
        <item name="android:popupBackground">@color/principal_morado</item>
        <item name="android:dropDownSelector">@color/principal_verde</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:dropDownVerticalOffset">10dp</item>
        <item name="android:dropDownHorizontalOffset">10dp</item>
        <item name="android:dropDownHeight">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
</resources>